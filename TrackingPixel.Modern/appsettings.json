{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://127.0.0.1:6000"
      }
    }
  },
  
  "Tracking": {
    "BaseUrl": "https://smartpixl.info",
    "ConnectionString": "Server=localhost;Database=SmartPixl;Integrated Security=True;TrustServerCertificate=True",
    "QueueCapacity": 10000,
    "BatchSize": 100,
    "BatchTimeoutMs": 100,
    "ShutdownTimeoutSeconds": 30,
    "BulkCopyTimeoutSeconds": 60
  },
  
  "TrackingLog": {
    "LogDirectory": "Log",
    "MinimumLevel": "Info",
    "WriteToConsole": true
  }
}
